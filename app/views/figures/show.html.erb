<h3><%= @figure.name %></h3>

<div class="solo_figure">
	<%= image_tag @figure.image.url %>
	<p class="figure_info">
		Type: <%= @figure.figure_type %> <br>
		Manufacturer: <%= @figure.manufacturer %> <br><br>
		<%= simple_format(@figure.description, {}, wrapper_tag: "span") %> <br><br>
		<b> <%= number_to_currency(@figure.price) %> </b>
	</p>
</div>
